<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <h5 class="mt-5">会員情報</h5>
  <div class="row">
    <div class="col-12">
      <table>
        <tr><th>氏名</th>
          <td><%= @user.last_name + @user.first_name %></td>
        </tr>

        <tr><th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>

        <tr><th>ニックネーム</th>
          <td><%= @user.nickname %></td>
        </tr>

        <tr><th>生年月日</th>
          <td><%= @user.birthday %></td>
        </tr>

        <tr><th>性別</th>
          <td><%= @user.gender_i18n %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <p><%= link_to "ユーザー情報の編集", edit_admin_user_path(@user), class: "btn btn-link" %></p>
    </div>
  </div>
</div>