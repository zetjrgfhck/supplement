<!DOCTYPE html>
<html>
  <head>
    <title>サプリライフ</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/a2662eb78a.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<header class="shadow-sm">
  <nav class="navbar navbar-expand-lg">
    <div class="container">
    <% if admin_signed_in? %>
      <%= link_to "サプリライフ", admin_root_path %>
    <% else %>
      <%= link_to "サプリライフ", root_path %>
    <% end %>

    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li>
          <%= link_to "マイページ", users_my_page_path %>
        </li>

        <li>
          <%= link_to "マイレビュー", reviews_user_path(current_user) %>
        </li>

        <li>
          <%= link_to "レビューする", new_review_path %>
        </li>

        <li>
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
        </li>

      <% elsif admin_signed_in? %>
        <li>
          <%= link_to "ユーザー一覧", admin_users_path %>
        </li>

        <li>
          <%=link_to "レビュー一覧", admin_reviews_path %>
        </li>

        <li>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to "このサイトについて", about_path %>
        </li>

        <li class="nav-item">
          <%= link_to "新規登録", new_user_registration_path %>
        </li>

        <li class="nav-item">
          <%= link_to "ログイン", new_user_session_path %>
        </li>

        <li class="nav-item">
          <%= link_to "レビューする", new_review_path %>
        </li>
        <% end %>
    </ul>
  </div>
  </nav>
</header>

<%= yield %>
</html>
