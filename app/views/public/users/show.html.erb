<div>
  <%= flash[:notice] %>
</div>

<div class="container">
<h4>会員情報</h4>
<table>
  <tr>
    <th>氏名</th>
    <td><%= @user.last_name + @user.first_name %></td>
  </tr>

  <tr>
    <th>メールアドレス</th>
    <td><%= @user.email %></td>
  </tr>

  <tr>
    <th>ニックネーム</th>
    <td><%= @user.nickname %></td>
  </tr>

  <tr>
    <th>生年月日</th>
    <td><%= @user.birthday %></td>
  </tr>

  <tr>
    <th>性別</th>
    <td><%= @user.gender_i18n %></td>
  </tr>
</table>

<p><%= link_to "プロフィール情報を編集する", users_informetion_edit_path(@user) %></p>
<p><%= link_to "コメントした投稿を確認する", comments_user_path(@user) %></p>
<p><%= link_to "ブックマークした投稿を確認する", bookmarks_user_path(@user) %></p>
</div>
</div>