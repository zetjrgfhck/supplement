<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 mt-5">
      <%= form_with url: reviews_path, local: true, method: :get do |f| %>
        <%= f.text_field :keyword, class: "form-control w-50", placeholder: "例) 商品名、成分、悩み" %>
        <%= f.submit "検索",class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <% @reviews.each do |review| %>
      <div class="col-3">
        <%= link_to review_path(review) do %>
          <div class="card mt-3">
            <div class="card-body">
              <h5 class="card-title"><%= review.title %></h5>
              <div class="card-text">
                <p class="txt-limit"><%= review.content %></p>
                <%= link_to "#{review.comments.count} コメント", review_path(review.id) %>
                <p><%= review.bookmarks.count %> いいね</p>
                <p><%= review.created_at.strftime('%Y/%m/%d') %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="col-12">
      <div class="row">
        <div class="col-10"></div>
        <div class="col-2">
          <%= link_to "投稿一覧へ", reviews_path %>
        </div>
      </div>
    </div>
  </div>



  <div class="row">
    <% @new_comment_reviews.each do |review| %>
      <div class="col-3">
        <%= link_to review_path(review.id) do %>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= review.title %></h5>
              <div class="card-text">
                <p class="txt-limit"><%= review.content %></p>
                <%= link_to "#{review.comments.count} コメント", review_path(review.id) %>
                <p><%= review.bookmarks.count %> いいね</p>
                <p><%= review.created_at.strftime('%Y/%m/%d') %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
