<div>
  <h4>投稿一覧</h4>
  <% @reviews.each do |review| %>
    <%= link_to review_path(review.id) do %>
    <%= review.title %>
    <% end %>
    <p><%= review.content %></p>
    <%= link_to "#{review.comments.count} コメント", review_path(review.id) %>
    <p><%= review.created_at.strftime('%Y/%m/%d') %></p>
  <% end %>
</div>