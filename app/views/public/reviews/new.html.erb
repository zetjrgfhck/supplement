<div class="container">
  <%= form_with model: @review do |f| %>
  <div class="row">
    <div class="col-12">
      <div class="form-label">
        <h2>レビュー投稿</h2>
          <h5>レビュータイトル</h5>
          <%= f.text_field :title, class: "form-control w-50", size: "5x5", autofocus: true, placeholder: "製品名や成分を交えると伝わりやすいです" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="form-label">
        <h5>レビュー本文</h5>
          <%= f.text_area :content, class: "form-control", rows: "15", placeholder: "実感できた効果、飲みやすさなど一番伝えたいことを書いてください" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <h5>写真を追加</h5>
        <%= f.label :images, "画像をアップロード", class: "image_input_btn" %>
        <%= f.file_field :images, accept: "image/*", multiple: true, class: "image_form" %>
        <%= f.submit "投稿する", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
</div>